#!/bin/sh

set -e

if [ ! -d /usr/share/libvirt4occi ]; then
   	mkdir /usr/share/libvirt4occi
fi
if [ ! -d /var/log/libvirt4occi ]; then
   	mkdir /var/log/libvirt4occi
fi
if [ ! -h /usr/share/libvirt4occi/conf ]; then
    	ln -s /etc/libvirt4occi/conf /usr/share/libvirt4occi/conf
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0